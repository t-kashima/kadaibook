%form{:method => 'get'}
  %input{:type => 'text', :name => 'amazonurl', :size => '80', :value => @amazonurl}
  %input{:type => 'submit', :value => 'Search'}

- if @book and @error.nil?
  %hr
  %form{:method => 'post'}
    %table
      %tr
        %td
          %img.image{:src => @book[:image]}
        %td
          %table
            %tr
              %td
                %input.isbn{:name => 'isbn', :value => @book[:isbn]}
            %tr
              %td
                %input.title{:name => 'title', :value => @book[:title]}
            %tr
              %td
                %input.author{:name => 'author', :value => @book[:author]}
            %tr
              %td
                %input.publisher{:name => 'publisher', :value => @book[:publisher]}
            %tr
              %td
                %input.date{:name => 'date', :value => @book[:date]}
            %tr
              %td
                %input.price{:name => 'price', :value => @book[:price]}
            %tr
              %td
                %input.place{:name => 'place', :value => '中央館'}

    %input.submit{:type => 'submit'}

- if @error
  #{@error}
